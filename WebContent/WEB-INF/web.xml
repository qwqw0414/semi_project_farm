<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>semi_project_farm</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>MemberEnrollServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/memberEnroll.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberEnrollServlet</servlet-name>
    <url-pattern>/member/memberEnroll</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MemberLoginServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/memberLogin.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberLoginServlet</servlet-name>
    <url-pattern>/member/memberLogin</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodeFilter</filter-name>
    <filter-class>common.filter.EncodeFilter</filter-class>
    <init-param>
      <param-name>encodeType</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>MemberFindIdServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/memberFindId.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberFindIdServlet</servlet-name>
    <url-pattern>/member/memberFindId</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdatePasswordServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/updatePassword.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdatePasswordServlet</servlet-name>
    <url-pattern>/member/updatePassword</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductRegServlet</servlet-name>
    <jsp-file>/WEB-INF/views/admin/productReg.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductRegServlet</servlet-name>
    <url-pattern>/admin/productReg</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductIOServlet</servlet-name>
    <jsp-file>/WEB-INF/views/admin/productIO.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductIOServlet</servlet-name>
    <url-pattern>/admin/productIOView</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <jsp-file>/WEB-INF/views/member/changePassword.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <url-pattern>/member/ChangePassword</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>wishListServlet</servlet-name>
    <jsp-file>/WEB-INF/views/product/wishListView.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>wishListServlet</servlet-name>
    <url-pattern>/product/wishList</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/views/common/serverError.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/views/common/error.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>errorServlet</servlet-name>
    <jsp-file>/WEB-INF/views/common/error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>errorServlet</servlet-name>
    <url-pattern>/common/error</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>serverErrorServlet</servlet-name>
    <jsp-file>/WEB-INF/views/common/serverError.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>serverErrorServlet</servlet-name>
    <url-pattern>/common/severError</url-pattern>
  </servlet-mapping>
</web-app>